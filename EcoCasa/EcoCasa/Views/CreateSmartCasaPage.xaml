<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:EcoCasa.ViewModel;assembly=EcoCasa"
             x:Class="EcoCasa.Views.CreateSmartCasaPage"
             Title="Create SmartCasa">

    <ContentPage.Resources>
        <ResourceDictionary>
            <viewModel:CreateSmartCasaViewModel x:Key="CreateSmartCasaViewModel"></viewModel:CreateSmartCasaViewModel>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout BindingContext="{StaticResource CreateSmartCasaViewModel}" BackgroundColor="Black">
        <Label Text="Name" FontFamily="Bold" FontSize="26" TextColor="White"></Label>
        <Entry Text="{Binding Name}"></Entry>
        <Label Text="Address" FontFamily="Bold" FontSize="26" TextColor="White"></Label>
        <Entry Text="{Binding Address}"></Entry>
        <Button Text="Validate" Command="{Binding ValidateSmartCasa}" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Gray" TextColor="White" Font="Bold" FontSize="26"></Button>
    </StackLayout>
</ContentPage>