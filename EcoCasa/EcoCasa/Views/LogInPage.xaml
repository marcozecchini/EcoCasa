<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoCasa.Views.LogInPage"
             xmlns:toolkit="clr-namespace:EcoCasa.ViewModel;assembly=EcoCasa"
             Title="LogIn" BackgroundColor="Green">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:LogInViewModel x:Key="LogInViewModel"></toolkit:LogInViewModel>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    
    <StackLayout BindingContext="{StaticResource LogInViewModel}" BackgroundColor="Black">
        <Label Text="Complete the fields" HorizontalOptions="Center" FontFamily="Bold" FontSize="26" TextColor="White"></Label>
        <Entry x:Name="email" Placeholder="Email" Text="{Binding Email}"></Entry>
        <Entry x:Name="password" Placeholder="Passwords" IsPassword="True" Text="{Binding Password}"></Entry>
        <Button Text="Login" Command="{Binding GoLogInCommand}" VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="Gray" TextColor="White" Font="Bold" FontSize="26"/>    
    </StackLayout>
    
</ContentPage>